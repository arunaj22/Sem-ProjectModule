<%= link_to 'Back', admin_lessons_path, class: 'btn btn-warning btn-sm' %>
<br><br>
<%= form_for([:admin, @lesson]) do |form| %>
  <%= render 'errors'%>

  <div class="form-group">
    <%= form.date_field :date, class: 'form-control', placeholder: 'Date *' %>
  </div>

  <div class="form-group">
    <%= form.text_field :fee, class: 'form-control', placeholder: 'Fee *' %>
  </div>

  <div class="form-group">
    <%= form.text_field :meeting_point, class: 'form-control', placeholder: 'Meeting point. *' %>
  </div>

  <div class="form-group">
    <%= form.text_field :vehicle_type, class: 'form-control', placeholder: 'Vehicle_type. *' %>
  </div>
  <div class="actions">
    <%= form.submit :class => 'btn btn-primary btn-sm' %>
  </div>
<% end %>
