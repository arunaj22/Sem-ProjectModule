<h1>Bookings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Vehicle type</th>
      <th>User</th>
      <th>Phone No.</th>
      <th>Address</th>
      <th>Created at</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= @lessons[booking.lesson_id]&.vehicle_type%></td>
        <td><%= @users[booking.user_id]&.email%> - <%= @users[booking.user_id]&.name%></td>
        <td><%= @jobs[booking.job_id]&.phone_number%></td>
        <td><%= @jobs[booking.job_id]&.address%></td>
        <td><%= booking.created_at.strftime("%a %b, %y")%></td>
      </tr>
    <% end %>
  </tbody>
</table>
