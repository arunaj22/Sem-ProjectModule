<section class="contact-form space-bottom mt-40">
  <div class="container w-set-small">
    <div class="row">
      <div class="col-sm-12 contact-block">
        <div class="col-sm-12 main-heading">
          <h2>Your job details</h2>
        </div>
        <%= form_with(model: job, local: true) do |form| %>
        <div class="form-group">
          <%= form.select :location, options_for_select(Job::LOCATIONS, @job.location), {:include_blank => "Select location"},  {style: 'width:100%;', class: 'w-100', :required => true} %>
        </div>
        <div class="form-group">
          <%= form.select :lesson_id, options_for_select(@lessons.map {|u| ["#{u.vehicle_type} - $#{u.fee} - #{u.meeting_point}", u.id]}, @job.location), {:include_blank => "Select service type"},  {style: 'width:100%;', class: 'w-100', :required => true} %>
        </div>
        <div class="form-group">
          <%= form.text_field :phone_number, class: 'form-control', placeholder: 'Phone no. *' %>
        </div>
        <div class="form-group">
          <%= form.text_field :address, class: 'form-control', placeholder: 'Full address *' %>
        </div>
        <div class="form-group">
          <%= form.text_area :description, class: 'form-control', style: 'background-color:#fff;', placeholder: 'Description *' %>
        </div>
        <%= form.hidden_field :user_id , value: current_user.id%>
        <div class="col-sm-12 no-padding">
          <%= form.submit 'Submit',  class: 'btn set-btn-large'%>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</section>
