<section class="contact-form space-bottom mt-40">
  <div class="container w-set-small">
    <div class="row">
      <div class="col-sm-12 contact-block">
        <div class="col-sm-12 main-heading">
          <h2>Your job details</h2>
        </div>
        <%= form_with(model: payment, local: true) do |form| %>

        <div class="form-group">
          <%= form.select :card_type, options_for_select(Payment::CARD_TYPES), {:include_blank => "Select card type"},  {style: 'width:100%;', class: 'w-100', :required => true} %>
        </div>
        <div class="form-group">
          <%= form.number_field :card_number, class: 'form-control', placeholder: 'Card number. *' %>
        </div>
        <%= form.hidden_field :booking_id , value: @booking_id%>
        <div class="col-sm-12 no-padding">
          <%= form.submit 'Submit',  class: 'btn set-btn-large'%>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</section>
